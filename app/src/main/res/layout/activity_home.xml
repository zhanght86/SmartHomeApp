    <RelativeLayout
        android:id="@+id/light_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mask_bg"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="535dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="47dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="76dp"
            android:background="@drawable/list_bg">

            <Button
                android:id="@+id/light_ui_close_btn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/setup_btn_close_selector" />

            <ListView
                android:id="@+id/light_listview"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:layout_marginEnd="33dp"
                android:layout_marginStart="33dp"
                android:layout_marginTop="50dp" />

            <Button
                android:id="@+id/light_all_close_btn"
                android:layout_width="249dp"
                android:layout_height="45dp"
                android:layout_below="@+id/light_listview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="33dp"
                android:background="@drawable/light_btn_close_selector"
                android:text="@string/all_close_text"
                android:textColor="@color/color_black" />
        </RelativeLayout>
