                        android:textColor="@color/home_scene_color"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/scene_greet_iv"
                        android:layout_width="51dp"
                        android:layout_height="51dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="37dp"
                        android:layout_toEndOf="@+id/scene_film_iv"
                        android:background="@drawable/homepage_scene_greet_n"
                        android:onClick="sceneClick" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/scene_greet_iv"
                        android:layout_below="@+id/scene_greet_iv"
                        android:layout_marginStart="10dp"
                        android:text="@string/scene_greet"
                        android:textColor="@color/home_scene_color"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>
