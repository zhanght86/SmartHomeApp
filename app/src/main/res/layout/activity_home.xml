                    android:id="@+id/home_environment_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/hp_home_ctrl_btn_selector">

                    <ImageView
                        android:id="@+id/environment_imageview"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/homepage_environment_icon_n" />

                    <TextView
                        android:id="@+id/environment_text1"
                        android:layout_width="wrap_content"
