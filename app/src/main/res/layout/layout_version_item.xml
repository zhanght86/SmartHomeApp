<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:minHeight="55dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="#e0c791"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/app_name"
        android:id="@+id/app_des"
        android:textColor="#827559"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/app_btn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/light_btn_selector"
        android:textColor="@drawable/setup_btn_text_color_selector"
        android:text="升级"
        android:textSize="16sp" />
</RelativeLayout>